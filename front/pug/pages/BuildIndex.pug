.fav-page#shakhtar
    .promo
        .promo__title
            .promo__title-text(data-translate="promoTitle")
        .promo__match
            .promo__match-team(data-translate="team-1")
            .promo__match-decor
            .promo__match-team(data-translate="team-2")
        .promo__date
            .promo__date-item(data-translate="promoDate")
            .promo__date-item(data-translate="promoTime")
        .promo__bottom
            .promo__bottom-title(data-translate="promoBottomTitle")
            .promo__bottom-text(data-translate="promoBottomText")
    .prize
        .prize__title.title(data-translate="prizeTitle")
        .prize__subtitle(data-translate="prizeSubtitle")
        .prize__img
        .prize__text(data-translate="prizeText")
        a(href="/login/" role="button").prize__btn.btn.unauth-msg #[span.btn-text(data-translate="loginBtn")]
    .guide
        .guide__title.title(data-translate="guideTitle")
        .guide__list
            .guide__list-item
                .guide__list-item-num
                    picture
                        source(media="(max-width: 1050px)" srcset="https://fav-prom.com/html/shakhtar-predictor/img/guide/num1-mob.png")
                        img(src="https://fav-prom.com/html/shakhtar-predictor/img/guide/num1-desc.png" alt="1")
                .guide__list-item-text(data-translate="guideTextNum1")
                .guide__list-btn
                .guide__list-popup
                    .guide__list-popup-close
                    .guide__list-popup-scroll(data-translate="guidePopupNum1")
            .guide__list-item
                .guide__list-item-num
                    picture
                        source(media="(max-width: 1050px)" srcset="https://fav-prom.com/html/shakhtar-predictor/img/guide/num2-mob.png")
                        img(src="https://fav-prom.com/html/shakhtar-predictor/img/guide/num2-desc.png" alt="2")
                .guide__list-item-text(data-translate="guideTextNum2")
                .guide__list-btn
                .guide__list-popup
                    .guide__list-popup-close
                    .guide__list-popup-scroll(data-translate="guidePopupNum2")
            .guide__list-item
                .guide__list-item-num
                    picture
                        source(media="(max-width: 1050px)" srcset="https://fav-prom.com/html/shakhtar-predictor/img/guide/num3-mob.png")
                        img(src="https://fav-prom.com/html/shakhtar-predictor/img/guide/num3-desc.png" alt="3")
                .guide__list-item-text(data-translate="guideTextNum3")
                .guide__list-btn
                .guide__list-popup
                    .guide__list-popup-close
                    .guide__list-popup-scroll(data-translate="guidePopupNum3")
        .guide__decor
    .predict
        .predict__title.title(data-translate="predictTitle")
        .predict__counter
            .predict__team1
                .predict__team1-decrease.team1-minus(role="button")
                .predict__team1-increase.team1-plus(role="button")
            .predict__score #[span.predictionTeam1 0] / #[span.predictionTeam2 0]
            .predict__team2
                .predict__team2-decrease.team2-minus(role="button")
                .predict__team2-increase.team2-plus(role="button")

        a(href="/login/" role="button").predict__btn.btn.unauth-msg #[span.btn-text(data-translate="loginBtn")]
        .predict__btn.took-part.btn.hide #[span.btn-text(data-translate="mainBtn" role="button")]

        .predict__yourBet.hide(data-translate="yourBet")

        .predict__wrap
            .predict__last
                .predict__last-title(data-translate="predictLastTitle")
                .predict__last-score
                    .predict__last-team1(data-translate="team-1")
                    .predict__last-counter #[span.scoreTeam1 0] / #[span.scoreTeam2 0]
                    .predict__last-team2(data-translate="team-2")

            .predict__bet.hide
                .predict__bet-true.hide
                    span(data-translate="predictBetTrue")
                .predict__bet-false
                    span(data-translate="predictBetFalse")
    .table
        .table__pers
        .table__cup
        .table__light
        .table__title.title(data-translate="tableTitle")
        .table__wrap#results-table
            .table__head
                .table__head-item(data-translate="tableId")
                .table__head-item(data-translate="tableDate")
                .table__head-item(data-translate="tablePredict")
                .table__head-item(data-translate="tablePrize")
            .table__body
                .table__body-scroll
        .table__bottom(data-translate="tableBottom")
        a(href="/sports/event/soccer/41317793/" role="button").table__btn.btn #[span.btn-text(data-translate="mainBtnBet")]
    .drop
        details.dropdown
            summary(data-translate="rulesTitle")
            .drop-txt
                .drop-txt-list(data-translate="rulesTxt")
